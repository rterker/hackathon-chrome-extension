{
    "manifest_version": 3,
    "name": "Hackathon Extension",
    "description": "Hackathon Extension",
    "version": "1.0",
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "icons/triangle.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>" 
            ],
            "js": [
                "scripts/content-script.js",
                "scripts/content.js"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    }
}
