{
    "manifest_version": 3,
    "name": "Hackathon Extension",
    "description": "Hackathon Extension",
    "version": "1.0",
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "icons/triangle.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>" 
            ],
            "js": [
                "scripts/content-script.js"
            ]
        }
    ],
    "permissions": [
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ]    
}