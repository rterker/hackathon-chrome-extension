{
    "manifest_version": 3,
    "name": "Hackathon Extension",
    "description": "Hackathon Extension",
    "version": "1.0",
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "icons/icon.png"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    }
}
